    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/d",
                    "/c",
                    "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat\"",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd src && nmake /f Makefile.windows.mk",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "loda test",
        },
        {
            "label": "test-slow",
            "type": "shell",
            "command": "loda test-slow",
        },
        {
            "label": "test-fast",
            "type": "shell",
            "command": "loda test-fast",
        }
    ]
}